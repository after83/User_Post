

<h1>Article</h1>
<table class="table ">
  <thead >
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Titre</th>
      <th scope="col">Contenue</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Montrer', post %></td>
        <%if current_user.admin?%>
          <td><%= link_to 'Edition', edit_post_path(post) %></td>
          <td><%= link_to 'Supprimer', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle article', new_post_path %> | <a href="/">Acceuil</a>
